# Test Environment Configuration
# Copy this file to .env.test and modify the values for your test environment

# PostgreSQL Test Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=auction_test
POSTGRES_MAX_OPEN_CONNS=10
POSTGRES_MAX_IDLE_CONNS=5
POSTGRES_CONN_MAX_LIFETIME=30m

# Test Application Configuration
APP_PORT=8081
APP_ENV=test

# Test JWT Configuration (if needed)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_TOKEN_EXPIRY=24h

# Redis Test Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Kafka Test Configuration (if needed)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=test_

# Note: 
# - The test database name will have "_test" appended automatically
# - Make sure to create the test database before running tests:
#   CREATE DATABASE auction_test;
# - Consider using a separate Docker container for test databases
