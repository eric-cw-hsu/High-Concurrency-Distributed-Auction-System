# Performance Testing Configuration Example
# Copy this file to .env.performance and modify values as needed

# Default Test Configuration
TEST_CONCURRENCY=20
TEST_ORDERS_PER_THREAD=2
TEST_INITIAL_STOCK=1000
TEST_ORDER_PRICE=100.0
TEST_WALLET_BALANCE=10000.0

# Default Performance Thresholds
TEST_MIN_SUCCESS_RATE=0.95      # 95% success rate
TEST_MAX_AVG_LATENCY=50ms       # 50ms average latency
TEST_MIN_THROUGHPUT=200.0       # 200 orders/sec
TEST_MAX_DURATION=5s            # 5 seconds max test duration

# High Performance Test Thresholds
TEST_HIGH_MIN_SUCCESS_RATE=0.99     # 99% success rate
TEST_HIGH_MAX_AVG_LATENCY=20ms      # 20ms average latency 
TEST_HIGH_MIN_THROUGHPUT=500.0      # 500 orders/sec
TEST_HIGH_MAX_DURATION=2s           # 2 seconds max test duration

# Stress Test Configuration
TEST_STRESS_CONCURRENCY=100
TEST_STRESS_ORDERS_PER_THREAD=5
TEST_STRESS_INITIAL_STOCK=500
TEST_STRESS_ORDER_PRICE=100.0
TEST_STRESS_WALLET_BALANCE=50000.0

# Load Test Configuration
TEST_LOAD_CONCURRENCY=50
TEST_LOAD_DURATION=60s
TEST_LOAD_RPS=100

# Test Environment
TEST_API_URL=http://localhost:8080
TEST_DATABASE_URL=postgres://auction_user:auction_password@localhost:5432/auction_test_db?sslmode=disable
TEST_REDIS_URL=redis://localhost:6379/1
