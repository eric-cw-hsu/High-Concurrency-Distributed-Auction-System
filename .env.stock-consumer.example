# Stock Consumer Service Environment Configuration Example  
# Copy this file to .env.stock-consumer and modify values as needed

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=info

# Kafka Topic Configuration
KAFKA_CONSUMED_TOPICS=order.confirmed,order.cancelled
KAFKA_PRODUCED_TOPICS=service.logs

# Service Configuration
REDIS_URL=redis://localhost:6379
KAFKA_BROKERS=localhost:9092
CONSUMER_GROUP_ID=stock-consumer-group

# Consumer Performance Settings
CONSUMER_BATCH_SIZE=10
CONSUMER_TIMEOUT=10s
WORKER_POOL_SIZE=5

# Redis Configuration
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=3
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
