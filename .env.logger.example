# Logger Service Environment Configuration Example
# Copy this file to .env.logger and modify values as needed

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=info

# Kafka Topic Configuration
KAFKA_CONSUMED_TOPICS=service.logs
KAFKA_PRODUCED_TOPICS=

# Service Configuration
KAFKA_BROKERS=localhost:9092
CONSUMER_GROUP_ID=logger-group
LOG_OUTPUT_DIR=./logs

# Logger Configuration
LOG_STORAGE_TYPE=file  # Options: memory, file
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_BACKUPS=5
LOG_RETENTION_DAYS=30

# Performance Settings
BATCH_SIZE=100
FLUSH_INTERVAL=5s
